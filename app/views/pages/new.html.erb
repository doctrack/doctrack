<h3>Create A New Document</h3>
<%= form_for(chapter, :url => doc_pages_path(:doc_id => @doc)) do |f| %>
<% if @chapter.errors.any? %>
<%= pluralize(@chapter.errors.count, "error") %>
<% @chapter.errors.full_messages.each do |msg| %>
<%= msg %>

<% end %>
<% end %>
<div class="field">
<%= f.label :chapter_name %>
<%= f.text_field :chapter_name %>
<%= f.label :content %>
<%= f.text_area :content, :size => '50x10'%>
</div>
<div class="action">
<%= f.submit :Create %>
</div>
<% end %>

